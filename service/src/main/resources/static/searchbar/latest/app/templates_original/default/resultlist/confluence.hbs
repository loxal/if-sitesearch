<li class="media ifs-tpl-crawler {{#if mobilePhoneState}}tpl-mobile{{/if}}" data-favorite="{{favoredString}}" data-index="{{integer}}" data-score="{{score}}">

    <div class="ifs-favorite-label {{#if favoredBool}} state-true {{/if}}">
        <i class="glyphicons glyphicons-star"></i>
    </div>

    {{#if mobilePhoneState}}
    <div class="ifs-swipe-area">
    {{/if}}

    <div class="media-left">
        <a class="avatar" href="javascript:void(0);" data-action="preview" {{#if shouldUseCustomPreview}}data-preview-custom="{{customPreviewUrl}}"{{/if}} data-preview-id="{{urlbase64}}" data-hiturl="{{folder}}{{filename}}">
            <div class="ifs-preview-mask"></div>
            <img class="ifs-avatar-img" src="{{authenticateIfJWTPresent thumbnail}}">
        </a>
    </div>
    <div class="media-body">
        <h4 class="media-heading ifs-dont-break">
            <a target="_blank" href="{{docUrl}}">{{{docTitle}}}</a>
        </h4>
        <p>
            {{#if toplevelParent}}<a href="{{toplevelParentUrl}}">{{toplevelParent}}</a>&nbsp;/{{/if}}{{#if directParentTitle}}...&nbsp;/&nbsp;<a href="{{directParentUrl}}">{{directParentTitle}}</a>, {{/if}}
            {{#if author}} {{author}}, {{/if}}
            {{modified}}
        </p>
        {{#if body}}
            <p class="ifs-textbody">{{{body}}}</p>
        {{/if}}

        {{#if category}}
            <p>{{{category}}}</p>
        {{/if}}

        {{#each labels}}
            {{this}}
        {{/each}}

        <a target="_blank" href="{{parent_space_url}}">
            <p class="truncate pathname" title="{{parent_space_url}}">{{parent_space_path}}</p>
        </a>

    </div>

    {{#if mobilePhoneState}}
        </div>
    {{/if}}


    {{#if hitMenu}}
        {{{hitMenu}}}
    {{/if}}
</li>